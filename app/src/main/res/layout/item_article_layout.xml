<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvArticleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Android多线程技术选型最全指南(part 1 - 误区)" />

        <ImageView
            android:id="@+id/top_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tvAuthorTime"
            android:contentDescription="@null"
            android:textColor="@android:color/holo_red_dark" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tvAuthorTime"
            android:layout_toEndOf="@id/top_label"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tvArticleCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvArticleTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="12sp"
            tools:text="基础知识/多线程与并发" />

        <TextView
            android:id="@+id/tvAuthorTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvArticleCategory"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:textSize="12sp"
            tools:text="xiaoyang  一天前" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>